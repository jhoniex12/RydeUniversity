# Ryde University Student Records Application
# Environment Configuration Template

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# MySQL Database Configuration
# For local development
DB_HOST=localhost
DB_USER=ryde_user
DB_PASSWORD=ryde_password
DB_NAME=ryde_university

# For AWS RDS Multi-AZ deployment
# DB_HOST=ryde-db.xxxxxxxxxxxx.ap-southeast-2.rds.amazonaws.com
# DB_USER=ryde_admin
# DB_PASSWORD=retrieve-from-secrets-manager
# DB_NAME=ryde_university

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# Application Settings
MAX_CONTENT_LENGTH=16777216
